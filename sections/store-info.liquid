<section class="bg-vinyl-black text-vinyl-paper py-24 px-4 sm:px-8 relative overflow-hidden" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="absolute top-0 right-0 w-64 h-64 border border-white/10 rounded-full translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 border border-white/10 rounded-full -translate-x-1/3 translate-y-1/3"></div>
  
  <div class="container mx-auto text-center relative z-10">
    <h2 class="font-serif text-5xl md:text-7xl italic mb-6">{{ shop.name }}<br/><span class="not-italic font-sans font-light tracking-tighter">{{ section.settings.location }}</span></h2>
    <p class="font-mono text-sm max-w-lg mx-auto mb-10 text-gray-400">
      {{ section.settings.heading }}
    </p>
    <a href="{{ section.settings.link }}" class="inline-flex items-center gap-2 text-white border-b border-white pb-1 hover:text-vinyl-blue hover:border-vinyl-blue transition-colors font-mono uppercase text-sm no-underline">
      {{ section.settings.link_text }} <span class="text-lg">â†’</span>
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Store Info",
  "tag": "section",
  "class": "section-store-info",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "We simplify music discovery with a curated selection of vinyl records and audio essentials."
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location",
      "default": "Brooklyn"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Visit Our Brooklyn Store"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Store Info"
    }
  ]
}
{% endschema %}
