{% comment %}
  Journal CTA Section
  - Brutalist design with large text and circular graphic
{% endcomment %}

<section class="bg-black text-white py-40 relative overflow-hidden">
  {% comment %} Graphic Background {% endcomment %}
  <div class="absolute right-[-5%] top-[-10%] opacity-20 pointer-events-none">
    <div class="w-[800px] h-[800px] border border-white/40 rounded-full flex items-center justify-center">
      <div class="w-[600px] h-[600px] border border-white/30 rounded-full flex items-center justify-center">
        <div class="w-[400px] h-[400px] border border-white/20 rounded-full"></div>
      </div>
    </div>
  </div>

  <div class="px-6 sm:px-10 lg:px-20 relative z-10">
    <div class="max-w-6xl">
        <h2 class="font-mono text-[10px] uppercase tracking-[0.5em] mb-12 text-gray-400 font-bold">
            {{ section.settings.subheading }}
        </h2>
        
        <div class="mb-20">
            <p class="font-serif text-5xl sm:text-7xl lg:text-[100px] italic leading-[0.85] text-white">
                {{ section.settings.heading }}
            </p>
        </div>

        <a href="{{ section.settings.button_link }}" class="inline-flex items-center gap-8 group no-underline text-white">
            <span class="font-mono text-[10px] uppercase tracking-[0.3em] font-bold border-b-2 border-white pb-1 group-hover:border-vinyl-blue group-hover:text-vinyl-blue transition-colors">
                {{ section.settings.button_label }}
            </span>
            <span class="text-3xl transition-transform duration-300 group-hover:translate-x-4">â†’</span>
        </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Journal CTA",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "MUSIC, PLACES, WORDS, OBJECTS."
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "CULTIVATED SOUNDS JOURNAL: A CURATED EXPLORATION OF SONIC CULTURE."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "VISIT THE JOURNAL"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Journal CTA"
    }
  ]
}
{% endschema %}
