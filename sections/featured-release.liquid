<section class="relative w-full border-b border-vinyl-blue overflow-hidden group">
  <div class="grid grid-cols-1 lg:grid-cols-2 min-h-screen">
    <!-- Left: Image -->
    <div class="relative h-[60vh] lg:h-auto border-b lg:border-b-0 lg:border-r border-vinyl-blue overflow-hidden">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 2000 | image_tag:
          loading: 'eager',
          class: 'absolute inset-0 w-full h-full object-cover transition-transform duration-[4s] ease-in-out group-hover:scale-105 filter grayscale contrast-[1.1]',
          sizes: '(min-width: 1024px) 50vw, 100vw'
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'absolute inset-0 w-full h-full object-cover filter grayscale contrast-125' }}
      {%- endif -%}
      
      <!-- Attribution -->
      <div class="absolute bottom-10 left-10 z-20">
        <p class="font-mono text-[9px] uppercase tracking-[0.3em] text-white/80">PHOTOGRAPHY: VINYL ARCHIVE</p>
      </div>
    </div>

    <!-- Right: Content -->
    <div class="relative flex flex-col justify-center p-12 sm:p-20 lg:p-32 bg-vinyl-paper">
      {%- if section.settings.subheading != blank -%}
        <p class="font-mono text-vinyl-blue text-[10px] mb-12 tracking-[0.4em] uppercase font-bold">{{ section.settings.subheading }}</p>
      {%- endif -%}
      
      <h2 class="hero-text font-serif text-6xl sm:text-7xl lg:text-[100px] leading-[0.85] text-vinyl-black mb-16 flex flex-col items-start gap-1">
        <span class="text-vinyl-blue italic -ml-1">Sessa's</span>
        <span>Third Full</span>
        <span>Length,</span>
        <span>Pequena</span>
        <span>Vertigem</span>
        <span>De Amor</span>
      </h2>

      {%- if section.settings.text != blank -%}
        <p class="font-sans text-base text-gray-500 max-w-sm mb-16 leading-relaxed">
          {{ section.settings.text }}
        </p>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-btn w-fit group flex items-center gap-6 no-underline">
          <span class="font-mono uppercase tracking-[0.3em] text-[10px] text-vinyl-black border-b border-vinyl-black pb-1 group-hover:text-vinyl-blue group-hover:border-vinyl-blue transition-colors">{{ section.settings.button_label }}</span>
          <span class="text-xl transition-transform group-hover:translate-x-2">â†’</span>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Release",
  "tag": "section",
  "class": "section-featured-release",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Featured Release"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Just Arrived"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p><span style=\"color: rgb(26, 35, 219); font-style: italic;\">Sessa's</span> Third Full Length, Pequena Vertigem <span style=\"font-weight: 300;\">De Amor</span></p>"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "A stunning exploration of tropicalia infused textures and intimate songwriting. Pressed on 180g limited edition clear vinyl."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Featured Release"
    }
  ]
}
{% endschema %}
