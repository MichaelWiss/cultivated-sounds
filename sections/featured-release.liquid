<style>
  .hero-text span {
    display: block;
  }
</style>

<section class="relative w-full border-b border-vinyl-blue overflow-hidden group">
  {% comment %} Background with blend mode {% endcomment %}
  <div class="absolute inset-0 bg-vinyl-blue opacity-5 z-10 pointer-events-none mix-blend-multiply"></div>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[70vh]">
    <!-- Left: Image -->
    <div class="relative h-[50vh] lg:h-auto border-b lg:border-b-0 lg:border-r border-vinyl-blue overflow-hidden">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 2000 | image_tag:
          loading: 'eager',
          class: 'absolute inset-0 w-full h-full object-cover transition-transform duration-[2s] ease-in-out group-hover:scale-105 filter grayscale contrast-125',
          sizes: '(min-width: 1024px) 50vw, 100vw'
        }}
      {%- else -%}
        <div class="absolute inset-0 bg-gray-200 flex items-center justify-center">
           {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover filter grayscale contrast-125' }}
        </div>
      {%- endif -%}
      
      <!-- Gradient overlay and badge -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-8">
        <div class="text-white font-mono text-xs uppercase border border-white/30 px-3 py-1 rounded-full backdrop-blur-md">
          {{ section.settings.badge_text | default: "Featured Release" }}
        </div>
      </div>
    </div>

    <!-- Right: Content -->
    <div class="relative flex flex-col justify-center p-8 sm:p-16 lg:p-24 bg-vinyl-paper">
      <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-vinyl-blue to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
      
      <div class="flex flex-col items-start">
        {%- liquid
          assign has_blocks = false
          if section.blocks.size > 0
            assign has_blocks = true
          endif
        -%}

        {%- if has_blocks -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'subheading' -%}
                <p class="font-mono text-vinyl-blue text-sm mb-6 tracking-widest uppercase" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </p>
              
              {%- when 'heading' -%}
                <h2 class="hero-text font-serif text-5xl sm:text-6xl lg:text-7xl leading-[0.9] text-vinyl-black mb-8" {{ block.shopify_attributes }}>
                  {{ block.settings.text | replace: '<p>', '' | replace: '</p>', '' }}
                </h2>

              {%- when 'text' -%}
                <div class="font-sans text-lg text-gray-600 max-w-md mb-10 leading-relaxed" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>

              {%- when 'button' -%}
                <a href="{{ block.settings.link | default: '#' }}" class="hero-btn w-fit group flex items-center gap-3 px-8 py-3 bg-transparent border border-vinyl-blue text-vinyl-blue rounded-full hover:bg-vinyl-blue hover:text-white transition-all duration-300 no-underline" {{ block.shopify_attributes }}>
                  <span class="font-mono uppercase tracking-wide text-sm">
                    {{ block.settings.label }}
                  </span>
                  <span class="transition-transform group-hover:translate-x-1">→</span>
                </a>
            {%- endcase -%}
          {%- endfor -%}
        {%- else -%}
          {% comment %} Fallback to section settings for when index.json is flat {% endcomment %}
          {%- if section.settings.subheading != blank -%}
            <p class="font-mono text-vinyl-blue text-sm mb-6 tracking-widest uppercase">
              {{ section.settings.subheading }}
            </p>
          {%- endif -%}

          {%- if section.settings.heading != blank -%}
            <h2 class="hero-text font-serif text-5xl sm:text-6xl lg:text-7xl leading-[0.9] text-vinyl-black mb-8">
              {{ section.settings.heading | replace: '<p>', '' | replace: '</p>', '' }}
            </h2>
          {%- endif -%}

          {%- if section.settings.text != blank -%}
            <div class="font-sans text-lg text-gray-600 max-w-md mb-10 leading-relaxed">
              {{ section.settings.text }}
            </div>
          {%- endif -%}

          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link | default: '#' }}" class="hero-btn w-fit group flex items-center gap-3 px-8 py-3 bg-transparent border border-vinyl-blue text-vinyl-blue rounded-full hover:bg-vinyl-blue hover:text-white transition-all duration-300 no-underline">
              <span class="font-mono uppercase tracking-wide text-sm">
                {{ section.settings.button_label }}
              </span>
              <span class="transition-transform group-hover:translate-x-1">→</span>
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

