{% comment %} Force Sync {% endcomment %}
<section class="relative w-full border-b border-vinyl-blue overflow-hidden group" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <!-- Background with blend mode -->
  <div class="absolute inset-0 bg-vinyl-blue opacity-5 z-10 pointer-events-none mix-blend-multiply"></div>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[70vh]">
    <!-- Left: Image -->
    <div class="relative h-[50vh] lg:h-auto border-b lg:border-b-0 lg:border-r border-vinyl-blue overflow-hidden">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1500 | image_tag:
          loading: 'lazy',
          class: 'absolute inset-0 w-full h-full object-cover transition-transform duration-[2s] ease-in-out group-hover:scale-105 filter grayscale contrast-125',
          sizes: '(min-width: 1024px) 50vw, 100vw'
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'absolute inset-0 w-full h-full object-cover filter grayscale contrast-125' }}
      {%- endif -%}
      
      {%- if section.settings.badge_text != blank -%}
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-8">
           <div class="text-white font-mono text-xs uppercase border border-white/30 px-3 py-1 rounded-full backdrop-blur-md">
              {{ section.settings.badge_text }}
           </div>
        </div>
      {%- endif -%}
    </div>

    <!-- Right: Content -->
    <div class="relative flex flex-col justify-center p-8 sm:p-16 lg:p-24 bg-vinyl-paper">
      <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-vinyl-blue to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>

      {%- if section.settings.subheading != blank -%}
        <p class="font-mono text-vinyl-blue text-sm mb-6 tracking-widest uppercase">{{ section.settings.subheading }}</p>
      {%- endif -%}
      
      <h2 class="hero-text font-serif text-5xl sm:text-6xl lg:text-7xl leading-[0.9] text-vinyl-black mb-8">
        {{ section.settings.heading }}
      </h2>

      {%- if section.settings.text != blank -%}
        <p class="font-sans text-lg text-gray-600 max-w-md mb-10 leading-relaxed">
          {{ section.settings.text }}
        </p>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-btn w-fit group flex items-center gap-3 px-8 py-3 bg-transparent border border-vinyl-blue text-vinyl-blue rounded-full hover:bg-vinyl-blue hover:text-white transition-all duration-300 no-underline">
          <span class="font-mono uppercase tracking-wide text-sm">{{ section.settings.button_label }}</span>
          <span class="group-hover:translate-x-1 transition-transform">â†’</span>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Release",
  "tag": "section",
  "class": "section-featured-release",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Featured Release"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Just Arrived"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p><span style=\"color: rgb(26, 35, 219); font-style: italic;\">Sessa's</span> Third Full Length, Pequena Vertigem <span style=\"font-weight: 300;\">De Amor</span></p>"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "A stunning exploration of tropicalia infused textures and intimate songwriting. Pressed on 180g limited edition clear vinyl."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Featured Release"
    }
  ]
}
{% endschema %}
