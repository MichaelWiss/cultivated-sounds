<div class="marquee-container w-full overflow-hidden bg-vinyl-paper border-t border-b border-vinyl-blue py-3" role="region" aria-label="Scrolling text">
  <div class="marquee-content font-mono text-xs uppercase tracking-widest text-vinyl-blue whitespace-nowrap inline-block" style="animation: marquee {{ section.settings.speed }}s linear infinite;">
    {%- for i in (1..10) -%}
      <span class="mx-4">{{ section.settings.text }}</span>
      <span class="mx-4">•</span>
    {%- endfor -%}
  </div>
</div>

<style>
  .marquee-container {
    overflow: hidden;
    white-space: nowrap;
  }
  .marquee-content {
    display: inline-block;
  }
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>

{% schema %}
{
  "name": "Scrolling Text",
  "class": "section-scrolling-text",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "New Arrivals • Restocks • Rare Finds • Pre-Orders",
      "label": "Text"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 50,
      "step": 1,
      "unit": "s",
      "label": "Speed",
      "default": 25
    }
  ],
  "presets": [
    {
      "name": "Scrolling Text"
    }
  ]
}
{% endschema %}
