<div class="min-h-screen bg-vinyl-paper flex items-center justify-center px-4 sm:px-8" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="w-full max-w-md bg-white border border-vinyl-blue p-8 shadow-lg">
    <h1 class="font-serif text-3xl italic text-vinyl-blue mb-6 text-center">{{ 'customer.register.title' | t }}</h1>
    
    {% form 'create_customer' %}
      {{ form.errors | default_errors }}

      <div class="mb-4">
        <label for="FirstName" class="block font-mono text-xs uppercase tracking-widest text-gray-500 mb-2">{{ 'customer.register.first_name' | t }}</label>
        <input 
          type="text" 
          name="customer[first_name]" 
          id="FirstName" 
          autocomplete="given-name" 
          class="w-full border border-gray-300 p-3 font-sans focus:border-vinyl-blue focus:outline-none"
          placeholder="{{ 'customer.register.first_name' | t }}"
        >
      </div>

      <div class="mb-4">
        <label for="LastName" class="block font-mono text-xs uppercase tracking-widest text-gray-500 mb-2">{{ 'customer.register.last_name' | t }}</label>
        <input 
          type="text" 
          name="customer[last_name]" 
          id="LastName" 
          autocomplete="family-name" 
          class="w-full border border-gray-300 p-3 font-sans focus:border-vinyl-blue focus:outline-none"
          placeholder="{{ 'customer.register.last_name' | t }}"
        >
      </div>

      <div class="mb-4">
        <label for="Email" class="block font-mono text-xs uppercase tracking-widest text-gray-500 mb-2">{{ 'customer.register.email' | t }}</label>
        <input 
          type="email" 
          name="customer[email]" 
          id="Email" 
          autocomplete="email" 
          autocorrect="off" 
          autocapitalize="off" 
          class="w-full border border-gray-300 p-3 font-sans focus:border-vinyl-blue focus:outline-none"
          placeholder="email@example.com"
        >
      </div>

      <div class="mb-6">
        <label for="CreatePassword" class="block font-mono text-xs uppercase tracking-widest text-gray-500 mb-2">{{ 'customer.register.password' | t }}</label>
        <input 
          type="password" 
          name="customer[password]" 
          id="CreatePassword" 
          class="w-full border border-gray-300 p-3 font-sans focus:border-vinyl-blue focus:outline-none"
          placeholder="{{ 'customer.register.password' | t }}"
        >
      </div>

      <button class="w-full bg-vinyl-blue text-white font-mono text-sm uppercase py-4 hover:bg-vinyl-black transition-colors tracking-widest mb-4">
        {{ 'customer.register.submit' | t }}
      </button>

      <div class="text-center font-mono text-xs text-gray-500">
        <a href="{{ routes.account_login_url }}" class="hover:text-vinyl-blue underline">{{ 'customer.register.login' | t }}</a>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Register",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 96
    }
  ]
}
{% endschema %}