<div class="{% if section.settings.use_alt_background %}bg-[#e8e6df]{% else %}bg-vinyl-paper{% endif %} border-b border-vinyl-blue" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="px-6 sm:px-10 lg:px-16">
    {%- if section.settings.title != blank -%}
      <div class="flex flex-col md:flex-row justify-between items-end mb-16 border-b border-gray-400 pb-6">
        <div class="flex flex-col gap-2">
          <h2 class="font-serif text-5xl lg:text-7xl text-vinyl-blue italic leading-none">{{ section.settings.title }}</h2>
          {%- if section.settings.subtitle != blank -%}
            <p class="font-mono text-[10px] uppercase tracking-[0.3em] text-gray-500 font-bold">{{ section.settings.subtitle }}</p>
          {%- endif -%}
        </div>
        
        {%- if section.settings.show_view_all -%}
          <a href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}" class="hidden md:inline-block font-mono text-[11px] uppercase tracking-widest text-vinyl-black border-b border-vinyl-black pb-1 hover:text-vinyl-blue hover:border-vinyl-blue transition-all no-underline font-bold">
            View All Picks →
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-16">
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        <div>
          {% render 'card-product',
            card_product: product,
            show_vendor: section.settings.show_vendor,
            card_style: 'editorial'
          %}
        </div>
      {%- else -%}
        {%- for i in (1..4) -%}
          <div>
            {% render 'card-product' %}
          </div>
        {%- endfor -%}
      {%- endfor -%}
    <div class="mt-12 md:hidden flex justify-center">
      {%- if section.settings.show_view_all -%}
        <a href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}" class="font-mono text-[11px] uppercase tracking-widest text-vinyl-black border-b border-vinyl-black pb-1 font-bold no-underline">
          View All Picks →
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Staff Picks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Staff Picks",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "HANDPICKED ESSENTIALS FOR CULTIVATED LISTENING",
      "label": "Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Maximum products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Enable \"View all\" button"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": true,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "use_alt_background",
      "default": false,
      "label": "Use alternate background (#e8e6df)"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Staff Picks",
      "settings": {
        "title": "Staff Picks",
        "subtitle": "HANDPICKED ESSENTIALS FOR CULTIVATED LISTENING",
        "products_to_show": 4,
        "show_view_all": true,
        "show_vendor": true,
        "use_alt_background": true
      }
    }
  ]
}
{% endschema %}
