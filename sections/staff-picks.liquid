<div class="border-b border-vinyl-blue {% if section.settings.use_alt_background %}bg-[#e8e6df]{% else %}bg-vinyl-paper{% endif %}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="flex flex-col md:flex-row justify-between items-end mb-8 px-4 sm:px-8">
        <div class="border-l-4 border-vinyl-blue pl-6">
          <h2 class="font-serif text-4xl sm:text-5xl text-vinyl-blue italic leading-tight">{{ section.settings.title }}</h2>
          {%- if section.settings.subtitle != blank -%}
            <p class="font-mono text-[10px] uppercase tracking-[0.2em] text-gray-400 mt-2">{{ section.settings.subtitle }}</p>
          {%- endif -%}
        </div>
        
        {%- if section.settings.show_view_all -%}
          <a href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}" class="hidden md:block font-mono text-[10px] uppercase tracking-[0.15em] hover:text-vinyl-blue transition-colors mt-4 md:mt-0 group border-b border-transparent hover:border-vinyl-blue pb-1">
            View All Picks <span class="group-hover:translate-x-1 inline-block transition-transform">→</span>
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 border-l border-t border-vinyl-blue">
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        <div class="staff-pick-item">
          {% render 'card-product',
            card_product: product,
            show_vendor: section.settings.show_vendor
          %}
        </div>
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="staff-pick-item">
            {% render 'card-product', show_vendor: section.settings.show_vendor %}
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all -%}
      <div class="mt-12 text-center md:hidden px-4">
        <a href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}" class="inline-block border border-vinyl-blue px-8 py-3 rounded-full font-mono text-[10px] uppercase tracking-widest hover:bg-vinyl-blue hover:text-white transition-colors shadow-[4px_4px_0px_0px_rgba(26,35,219,0.1)]">
          View All Picks →
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Staff Picks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Staff Picks",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "HANDPICKED ESSENTIALS FOR CULTIVATED LISTENING",
      "label": "Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Maximum products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Enable \"View all\" button"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": true,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "use_alt_background",
      "default": false,
      "label": "Use alternate background (#e8e6df)"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Staff Picks",
      "settings": {
        "title": "Staff Picks",
        "subtitle": "HANDPICKED ESSENTIALS FOR CULTIVATED LISTENING",
        "products_to_show": 4,
        "show_view_all": true,
        "show_vendor": true,
        "use_alt_background": true
      }
    }
  ]
}
{% endschema %}
