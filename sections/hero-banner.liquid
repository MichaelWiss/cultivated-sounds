<section class="relative w-full border-b border-vinyl-blue overflow-hidden group">
  <div class="grid grid-cols-1 lg:grid-cols-2 min-h-screen">
    
    <!-- Left: Image -->
    <div class="relative h-[60vh] lg:h-auto border-b lg:border-b-0 lg:border-r border-vinyl-blue overflow-hidden">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 2000 | image_tag:
          loading: 'eager',
          class: 'absolute inset-0 w-full h-full object-cover transition-transform duration-[4s] ease-in-out group-hover:scale-105 filter grayscale contrast-[1.1]',
          sizes: '(min-width: 1024px) 50vw, 100vw'
        }}
      {%- else -%}
        <div class="absolute inset-0 bg-gray-200 flex items-center justify-center">
           {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover filter grayscale contrast-125' }}
        </div>
      {%- endif -%}
      
      <!-- Featured Release Badge -->
      <div class="absolute bottom-10 left-10 z-20">
        <span class="inline-block px-4 py-1.5 border border-white/60 rounded-full font-mono text-[9px] uppercase tracking-[0.2em] text-white backdrop-blur-md bg-black/20">
          {{ section.settings.badge_text | default: "FEATURED RELEASE" }}
        </span>
      </div>
      
      <!-- Blue Separation Line (Visible on Mobile) -->
      <div class="lg:hidden absolute bottom-0 left-0 w-full h-px bg-vinyl-blue"></div>
    </div>

    <!-- Right: Content -->
    <div class="relative flex flex-col justify-center p-12 sm:p-20 lg:px-32 lg:py-40 bg-vinyl-paper">
      
      <!-- Blue separation line (left border for desktop) -->
      <div class="hidden lg:block absolute left-0 top-0 h-full w-px bg-vinyl-blue"></div>

      <div class="flex flex-col items-start">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'subheading' -%}
              <p class="font-mono text-vinyl-blue text-[10px] mb-12 tracking-[0.4em] uppercase font-bold" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {%- when 'heading' -%}
              <h2 class="hero-text font-serif text-6xl sm:text-7xl lg:text-[100px] leading-[0.88] text-vinyl-black mb-16 flex flex-col items-start" {{ block.shopify_attributes }}>
                {{ block.settings.text | replace: '<p>', '' | replace: '</p>', '' }}
              </h2>

            {%- when 'text' -%}
              <div class="font-sans text-base text-gray-500 max-w-sm mb-16 leading-relaxed" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>

            {%- when 'button' -%}
              <a href="{{ block.settings.link | default: '#' }}" class="hero-btn w-fit group flex items-center gap-6 no-underline" {{ block.shopify_attributes }}>
                <span class="font-mono uppercase tracking-[0.3em] text-[10px] text-vinyl-black border-b border-vinyl-black pb-1 group-hover:text-vinyl-blue group-hover:border-vinyl-blue transition-colors">
                  {{ block.settings.label }}
                </span>
                <span class="text-xl transition-transform group-hover:translate-x-2">â†’</span>
              </a>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Release",
  "tag": "section",
  "class": "section-featured-release",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "FEATURED RELEASE"
    }
  ],
  "blocks": [
    {
      "type": "subheading",
      "name": "Subheading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Just Arrived"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p><span style=\"color: rgb(26, 35, 219); font-style: italic;\">Sessa's</span> Third Full Length, Pequena Vertigem De Amor</p>"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "A stunning exploration of tropicalia infused textures and intimate songwriting."
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Release",
      "blocks": [
        { "type": "subheading" },
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}
