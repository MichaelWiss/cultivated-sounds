<footer class="bg-vinyl-paper border-t border-vinyl-blue" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="px-6 sm:px-10 lg:px-16">
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 md:gap-8 mb-20">
      
      <!-- Brand -->
      <div class="md:col-span-4 flex flex-col justify-start">
        <div class="mb-12">
          {% comment %} Logo Circle with Dot {% endcomment %}
          <div class="w-16 h-16 border-2 border-vinyl-blue rounded-full flex items-center justify-center mb-10">
            <div class="w-3 h-3 bg-vinyl-blue rounded-full"></div>
          </div>
          <a href="{{ routes.root_url }}" class="font-serif text-5xl lg:text-6xl italic font-black text-vinyl-blue decoration-0 no-underline leading-none">
            {{ shop.name }}
          </a>
        </div>
        <p class="font-sans text-sm leading-[1.7] max-w-sm text-gray-500 mb-10">
          {{ section.settings.brand_description | default: 'We simplify music discovery with a curated selection of vinyl records and audio essentials. Based in Brooklyn, shipping worldwide.' }}
        </p>
      </div>

      <!-- Dynamic Blocks (Menus) -->
      <div class="md:col-span-4 grid grid-cols-2 gap-8">
        {%- for block in section.blocks -%}
          <div {{ block.shopify_attributes }}>
            {%- if block.settings.heading != blank -%}
              <h4 class="font-mono text-[10px] uppercase tracking-[0.3em] text-vinyl-blue font-bold mb-10">{{ block.settings.heading }}</h4>
            {%- endif -%}
            {%- if block.settings.menu != blank -%}
              <ul class="space-y-5 font-serif text-lg list-unstyled text-vinyl-black">
                {%- for link in block.settings.menu.links -%}
                  <li>
                      <a 
                          href="{{ link.url }}" 
                          class="hover:text-vinyl-blue transition-all no-underline"
                      >
                          {{ link.title }}
                      </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>

      <!-- Newsletter -->
      <div class="md:col-span-4">
        <div class="bg-[#f0efea] p-10 border-2 border-vinyl-blue vinyl-shadow-lg relative min-h-[300px] flex flex-col">
           <h3 class="font-serif text-4xl italic text-vinyl-black mb-4">Join the Club</h3>
           <p class="font-sans text-xs text-gray-500 mb-12 leading-relaxed max-w-[250px]">Get early access to drops and exclusive content.</p>
           
           {% form 'customer', class: 'mt-auto' %}
             <input type="hidden" name="contact[tags]" value="newsletter">
             <div class="relative group border-b border-gray-400 mb-8 flex items-center">
               <input
                 type="email"
                 name="contact[email]"
                 class="w-full bg-transparent py-3 px-0 font-mono text-[11px] uppercase tracking-[0.2em] focus:outline-none placeholder:text-gray-400"
                 placeholder="EMAIL ADDRESS"
                 required
               >
               <!-- Pink Icon Hexagon/Star from screenshot -->
               <div class="text-[#c082ff] ml-2">
                 <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L14.5 9H22L16 14L18.5 21L12 17L5.5 21L8 14L2 9H9.5L12 2Z" />
                 </svg>
               </div>
             </div>
             
             <button type="submit" class="w-full bg-vinyl-black text-white py-5 px-8 flex justify-between items-center group overflow-hidden">
                <span class="font-mono text-[11px] uppercase tracking-[0.3em] font-bold">Subscribe</span>
                <span class="text-xl transition-transform group-hover:translate-x-2">→</span>
             </button>
           {% endform %}
        </div>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="mt-24 pt-10 border-t border-gray-300 flex flex-col sm:flex-row justify-between items-center gap-8">
       <div class="font-mono text-[10px] uppercase tracking-widest text-gray-400">
          © {{ 'now' | date: "%Y" }} Cultivated Sounds Brooklyn.
       </div>
       
       <div class="flex gap-10 items-center">
          <a href="#" class="text-vinyl-black hover:text-vinyl-blue transition-colors">{% render 'icon-instagram' %}</a>
          <a href="#" class="text-vinyl-black hover:text-vinyl-blue transition-colors">{% render 'icon-facebook' %}</a>
          <a href="#" class="text-vinyl-black hover:text-vinyl-blue transition-colors">{% render 'icon-twitter' %}</a>
       </div>
       
       <div class="font-mono text-[10px] uppercase tracking-widest text-gray-400">
          DESIGNED BY MW. POWERED BY CODE.
       </div>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand Description",
      "default": "We simplify music discovery with a curated selection of vinyl records and audio essentials. Based in Brooklyn, shipping worldwide."
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["footer"]
  },
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list",
          "settings": { "heading": "EXPLORE" }
        },
        {
          "type": "link_list",
          "settings": { "heading": "SUPPORT" }
        }
      ]
    }
  ]
}
{% endschema %}
