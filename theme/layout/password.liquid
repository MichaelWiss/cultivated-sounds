<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ shop.name }}</title>

    <meta name="description" content="{{ page_description | escape }}">

    {% render 'meta-tags' %}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    {{ content_for_header }}

    {% style %}
      :root {
        --color-vinyl-paper: {{ settings.colors_background }};
        --color-vinyl-blue: {{ settings.colors_accent_1 }};
        --color-vinyl-black: {{ settings.colors_text }};
        --color-vinyl-red: {{ settings.colors_accent_2 }};
        
        --font-heading-family: 'Playfair Display', serif;
        --font-body-family: 'Inter', sans-serif;
        --font-mono-family: 'Space Mono', monospace;
      }

      body {
        background-color: var(--color-vinyl-paper);
        color: var(--color-vinyl-black);
        font-family: var(--font-body-family);
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .password-page {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        text-align: center;
      }

      .password-logo {
        margin-bottom: 2rem;
      }

      .password-logo__text {
        font-family: var(--font-heading-family);
        font-size: 2.5rem;
        font-style: italic;
        color: var(--color-vinyl-blue);
        text-decoration: none;
      }

      .password-content {
        max-width: 32rem;
      }

      .password-content h1 {
        font-family: var(--font-heading-family);
        font-size: 3rem;
        font-style: italic;
        color: var(--color-vinyl-blue);
        margin-bottom: 1rem;
      }

      .password-content p {
        font-size: 1.125rem;
        color: #666;
        margin-bottom: 2rem;
        line-height: 1.6;
      }

      .password-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .password-form input[type="password"] {
        padding: 1rem;
        border: 1px solid var(--color-vinyl-blue);
        font-family: var(--font-mono-family);
        font-size: 0.875rem;
        text-align: center;
      }

      .password-form input[type="password"]:focus {
        outline: none;
        border-color: var(--color-vinyl-black);
      }

      .password-form button {
        padding: 1rem 2rem;
        background: var(--color-vinyl-blue);
        color: white;
        border: none;
        font-family: var(--font-mono-family);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .password-form button:hover {
        background: var(--color-vinyl-black);
      }

      .password-footer {
        padding: 2rem;
        text-align: center;
        border-top: 1px solid #ddd;
      }

      .password-footer__text {
        font-family: var(--font-mono-family);
        font-size: 0.75rem;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .password-login-link {
        display: inline-block;
        margin-top: 1rem;
        font-family: var(--font-mono-family);
        font-size: 0.75rem;
        color: var(--color-vinyl-blue);
        text-decoration: underline;
      }

      .password-social {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
      }

      .password-social a {
        color: var(--color-vinyl-blue);
        transition: color 0.3s;
      }

      .password-social a:hover {
        color: var(--color-vinyl-black);
      }
    {% endstyle %}

    {{ 'application.css' | asset_url | stylesheet_tag }}

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>
  </head>

  <body>
    <main class="password-page" role="main">
      <div class="password-logo">
        <a href="/" class="password-logo__text">{{ shop.name }}<span style="font-size: 0.5em; vertical-align: super; font-style: normal;">Â®</span></a>
      </div>

      <div class="password-content">
        <h1>{{ 'general.password_page.opening_soon' | t }}</h1>
        
        {%- if shop.password_message != blank -%}
          <p>{{ shop.password_message }}</p>
        {%- endif -%}

        {%- form 'storefront_password', class: 'password-form' -%}
          {%- if form.errors -%}
            <div class="form-error" style="color: var(--color-vinyl-red); margin-bottom: 1rem;">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
          <input
            type="password"
            name="password"
            id="Password"
            placeholder="{{ 'general.password_page.password_placeholder' | t }}"
            autocomplete="current-password"
          >
          <button type="submit">{{ 'general.password_page.enter' | t }}</button>
        {%- endform -%}

        <a href="#login-modal" class="password-login-link">{{ 'general.password_page.admin_link' | t }}</a>

        {% if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_twitter_link != blank %}
          <div class="password-social">
            {% render 'social-icons' %}
          </div>
        {% endif %}
      </div>
    </main>

    <footer class="password-footer">
      <p class="password-footer__text">{{ 'general.password_page.powered_by_shopify' | t }}</p>
    </footer>

    <ul hidden>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>
  </body>
</html>
