{% comment %}
  Navigation bar for collection links
{% endcomment %}

<nav class="bg-vinyl-blue border-b border-black py-4 z-40 overflow-x-auto no-scrollbar">
  <div class="flex justify-center items-center gap-6 sm:gap-12 px-6">
    {%- for link in section.settings.menu.links -%}
      <a 
        href="{{ link.url }}"
        class="font-mono text-[10px] uppercase tracking-[0.25em] text-white hover:text-white/70 transition-colors whitespace-nowrap {% if link.active %}font-bold underline underline-offset-8 decoration-2{% endif %}"
      >
        {{ link.title }}
      </a>
      {%- unless forloop.last -%}
        <span class="text-white/40">|</span>
      {%- endunless -%}
    {%- endfor -%}
  </div>
</nav>

{% schema %}
{
  "name": "Collection Bar",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Collection Bar"
    }
  ]
}
{% endschema %}
