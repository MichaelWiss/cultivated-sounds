<div class="min-h-screen bg-vinyl-paper py-24 px-4 sm:px-8">
  <div class="max-w-6xl mx-auto">
    
    <div class="flex justify-between items-center mb-12 border-b border-vinyl-blue pb-4">
      <h1 class="font-serif text-4xl italic text-vinyl-blue">My Account</h1>
      <a href="{{ routes.account_logout_url }}" class="font-mono text-xs uppercase tracking-widest text-gray-500 hover:text-vinyl-blue">Log out</a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      {% comment %} Order History {% endcomment %}
      <div class="lg:col-span-2">
        <h2 class="font-serif text-2xl mb-6">Order History</h2>
        
        {% paginate customer.orders by 20 %}
          {% if customer.orders.size > 0 %}
            <div class="border border-gray-200 bg-white">
              <table role="table" class="w-full text-left border-collapse">
                <thead role="rowgroup" class="bg-gray-50 border-b border-gray-200">
                  <tr role="row">
                    <th id="ColumnOrder" scope="col" role="columnheader" class="p-4 font-mono text-xs uppercase text-gray-500">Order</th>
                    <th id="ColumnDate" scope="col" role="columnheader" class="p-4 font-mono text-xs uppercase text-gray-500">Date</th>
                    <th id="ColumnPayment" scope="col" role="columnheader" class="p-4 font-mono text-xs uppercase text-gray-500">Payment</th>
                    <th id="ColumnFulfillment" scope="col" role="columnheader" class="p-4 font-mono text-xs uppercase text-gray-500">Status</th>
                    <th id="ColumnTotal" scope="col" role="columnheader" class="p-4 font-mono text-xs uppercase text-gray-500 text-right">Total</th>
                  </tr>
                </thead>
                <tbody role="rowgroup" class="divide-y divide-gray-100">
                  {% for order in customer.orders %}
                    <tr role="row" class="hover:bg-gray-50 transition-colors">
                      <td headers="ColumnOrder" role="cell" class="p-4 font-mono text-sm text-vinyl-blue underline">
                        <a href="{{ order.customer_url }}">{{ order.name }}</a>
                      </td>
                      <td headers="ColumnDate" role="cell" class="p-4 font-sans text-sm text-gray-600">
                        {{ order.created_at | time_tag: format: 'date' }}
                      </td>
                      <td headers="ColumnPayment" role="cell" class="p-4 font-sans text-sm text-gray-600">
                        {{ order.financial_status_label }}
                      </td>
                      <td headers="ColumnFulfillment" role="cell" class="p-4 font-sans text-sm text-gray-600">
                        {{ order.fulfillment_status_label }}
                      </td>
                      <td headers="ColumnTotal" role="cell" class="p-4 font-mono text-sm text-right">
                        {{ order.total_price | money_with_currency }}
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
            
            {% if paginate.pages > 1 %}
              <div class="mt-8 text-center">
                {% render 'pagination', paginate: paginate %}
              </div>
            {% endif %}
          
          {% else %}
            <div class="bg-gray-50 border border-gray-200 p-8 text-center">
              <p class="font-sans text-gray-500 mb-4">You haven't placed any orders yet.</p>
              <a href="{{ routes.all_products_collection_url }}" class="font-mono text-xs uppercase bg-vinyl-blue text-white px-6 py-3 hover:bg-vinyl-black transition-colors">Start Digging</a>
            </div>
          {% endif %}
        {% endpaginate %}
      </div>

      {% comment %} Account Details {% endcomment %}
      <div>
        <h2 class="font-serif text-2xl mb-6">Account Details</h2>
        <div class="bg-white border border-gray-200 p-6">
          <h3 class="font-mono text-sm font-bold uppercase mb-2 text-vinyl-blue">Default Address</h3>
          {{ customer.default_address | format_address }}
          <a href="{{ routes.account_addresses_url }}" class="block mt-4 font-mono text-xs uppercase text-gray-500 hover:text-vinyl-blue underline">View Addresses ({{ customer.addresses_count }})</a>
        </div>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Account",
  "settings": []
}
{% endschema %}