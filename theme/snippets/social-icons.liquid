<ul class="list-unstyled list-social flex gap-4" role="list">
  {%- if settings.social_facebook_link != blank -%}
    <li class="list-social__item">
      <a href="{{ settings.social_facebook_link }}" class="link list-social__link text-vinyl-blue hover:text-vinyl-black transition-colors">
