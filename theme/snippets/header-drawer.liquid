{% comment %}
  Header Drawer Snippet
  - Ported from Header.tsx (Mobile Menu)
  - Uses Tailwind CSS
{% endcomment %}

<header-drawer id="mobile-menu-drawer" class="relative z-[60]" hidden>
  {% comment %} Overlay {% endcomment %}
  <div 
    id="mobile-menu-overlay"
    class="fixed inset-0 bg-vinyl-black/50 backdrop-blur-sm z-[60] opacity-0 pointer-events-none transition-opacity duration-300"
  ></div>

  {% comment %} Drawer {% endcomment %}
  <div 
    id="mobile-menu-container"
    class="fixed top-0 right-0 h-full w-4/5 max-w-sm bg-vinyl-paper z-[70] shadow-2xl border-l border-vinyl-blue transform translate-x-full transition-transform duration-500 ease-out flex flex-col"
  >
    <div class="flex justify-between items-center p-6 border-b border-vinyl-blue">
      <span class="font-serif text-xl italic text-vinyl-blue">Menu</span>
      <button id="mobile-menu-close" class="text-vinyl-blue hover:rotate-90 transition-transform duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
      </button>
    </div>

    <nav class="flex-1 p-6 flex flex-col space-y-6 overflow-y-auto">
      {% for link in section.settings.menu.links %}
        <a 
          href="{{ link.url }}" 
          class="font-serif text-3xl hover:italic hover:text-vinyl-blue transition-all"
        >
          {{ link.title }}
        </a>
      {% endfor %}
      
      {% if shop.customer_accounts_enabled %}
        <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" class="font-serif text-3xl hover:italic hover:text-vinyl-blue transition-all mt-8 pt-8 border-t border-gray-200">
          {% if customer %}Account{% else %}Log in{% endif %}
        </a>
      {% endif %}
    </nav>

    <div class="p-6 border-t border-vinyl-blue bg-vinyl-blue text-white">
      <p class="font-mono text-xs uppercase mb-2">Brooklyn Store</p>
      <p class="font-sans text-sm">252 Schermerhorn St,<br/>Brooklyn, NY 11217</p>
    </div>
  </div>
</header-drawer>